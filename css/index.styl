@import "misc"



html, body
  width: 100%
  overflow-x: hidden
  
h1
  font-size: 2.8em
  text-align: center
  margin-bottom: 50px
  
h2
  font-size: 2.2em
  text-align: center
  margin: 100px 0 50px 0

input, textarea
  position: relative
  display: block
  margin: 0 auto
  size(400px, 30px)

textarea
  height: 85px

button
  position: relative
  display: block
  margin: 0 auto
  background: white
  size(200px, 50px)
  

input, textarea, button
  outline: 0
  border: none
  border-bottom: 1px solid black
  margin-bottom: 25px

button
  border: 1px solid black